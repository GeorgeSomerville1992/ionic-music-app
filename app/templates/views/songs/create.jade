ion-view
  ion-header-bar.bar-positive(align-title='center')
    button.button.button-icon.icon.ion-navicon(menu-toggle='left')
    h1.title musicAPp
  ion-content.padding
    .list
      label.item.item-input.item-stacked-label
        span.input-label Name
        input(type='text', ng-model='song.name')
      label.item.item-input.item-stacked-label
        span.input-label Artist
        input(type='text', ng-model='song.artist')
      label.item.item-input.item-stacked-label
        span.input-label Album artwork
        input(type='text', ng-model='song.album')
      button.button.button-full.button-dark(ng-click='getSongs(song)') get songs
    button.button(ng-click="play('http://www.stephaniequinn.com/Music/Allegro%20from%20Duet%20in%20C%20Major.mp3')")  Play from internet
    .card(ng-repeat='song in songResults.items')
      .item.item-text-wrap {{song.name}}
      .item.item-image
        img(src='{{song.album.images[1].url}}')
      .item.item-divider
        audio(controls='controls')
          source(ng-src='{{trustSrc(song.preview_url)}}', type='audio/mpeg')
      .item.tabs.tabs-secondary.tabs-icon-left
        a.tab-item(href='#')
          i.icon.ion-thumbsup
          |             Like
        a.tab-item(href='#')
          i.icon.ion-chatbox
          |             Comment
        a.tab-item(ng-click='submitSong(song)')
          i.icon.ion-share
          |             add to Favs
